<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fromright</item>
        <item name="android:activityOpenExitAnimation">@anim/tolift</item>
        <item name="android:activityCloseEnterAnimation">@anim/fromlift</item>
        <item name="android:activityCloseExitAnimation">@anim/toright</item>
    </style>

</resources>
